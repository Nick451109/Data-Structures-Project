<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.VistaAlbumesController">
   <children>
      <Label fx:id="Album" layoutX="107.0" layoutY="25.0" prefHeight="18.0" prefWidth="102.0" />
      <ComboBox id="Seleccionar Album" fx:id="cbAlbum" layoutX="45.0" layoutY="30.0" onMouseClicked="#mostrarAlbum" prefWidth="150.0" promptText="Seleccionar Album" />
      <ScrollPane layoutX="38.0" layoutY="82.0" prefHeight="274.0" prefWidth="413.0">
         <content>
            <FlowPane fx:id="galleria" prefHeight="272.0" prefWidth="410.0">
               <opaqueInsets>
                  <Insets bottom="50.0" left="50.0" right="52.0" top="50.0" />
               </opaqueInsets></FlowPane>
         </content>
      </ScrollPane>
      <TextField fx:id="txtBusqueda" disable="true" layoutX="389.0" layoutY="29.0" prefHeight="26.0" prefWidth="125.0" />
      <VBox fx:id="vbOpciones" disable="true" layoutX="460.0" layoutY="82.0" prefHeight="208.0" prefWidth="118.0">
         <children>
            <RadioButton fx:id="rbLugar" mnemonicParsing="false" onMouseClicked="#habilitarBusqueda" text="Lugar">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
               <toggleGroup>
                  <ToggleGroup fx:id="tgOpcion" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbPersonas" mnemonicParsing="false" onMouseClicked="#habilitarBusqueda" text="Personas" toggleGroup="$tgOpcion">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="rbLugarPersonas" mnemonicParsing="false" onMouseClicked="#habilitarBusqueda" text="Lugar y Personas" toggleGroup="$tgOpcion">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="rbDescripcion" mnemonicParsing="false" onMouseClicked="#habilitarBusqueda" text="Descripcion" toggleGroup="$tgOpcion">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="rbReacciones" lineSpacing="50.0" mnemonicParsing="false" onMouseClicked="#habilitarBusqueda" text="Reacciones" toggleGroup="$tgOpcion">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </RadioButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </VBox>
      <Button layoutX="519.0" layoutY="30.0" mnemonicParsing="false" onMouseClicked="#buscar" text="Buscar:" />
      <Button layoutX="209.0" layoutY="30.0" mnemonicParsing="false" onMouseClicked="#seleccionarAlbum" text="Mostrar" />
   </children>
</AnchorPane>
